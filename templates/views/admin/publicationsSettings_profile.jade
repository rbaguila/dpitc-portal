extends ../../layouts/admin-default

block content
    .row
        .col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3.main
            form.form-group.row(method='post')
                input(type='hidden', name='action', value='editPublicationSetting')
                .row
                    .col-md-7
                        input.form-control.input-lg(type='text', value= data.publications_settings.name, placeholder='Name', name='name')
                h5.help-block #{'Key: '+data.publications_settings.key}
                h5.help-block #{'ID: '+data.publications_settings._id}
                .row
                    h4 Publications Description
                .row
                    .col-md-7
                        label Publications Title
                        input.form-control(type='text', value= data.publications_settings.publicationsTitle, placeholder='Publications Title', name='publicationsTitle')
                .row
                    .col-md-7
                        label PUblications Description
                        textarea.form-control(rows='10') #{data.publications_settings.description}
                .row
                    .col-md-7
                        label Publications Heading
                        input.form-control(type='text', value= data.publications_settings.publicationsHeading, placeholder='Publications Heading', name='publicationsHeading')
                br
                br
                footer.footer
                    .container
                        button.btn.btn-primary(type='submit', name='editPublciationSetting') Save   
                        button.btn.btn-link(type='button', data-toggle='modal', data-target='#deletePublicationSetting') Delete Publication
            #deletePublicationSetting.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deletePublicationSettingLabel')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            h4#deletePublicationSettingLabel.modal-title #{'Are you sure you want to delete '+data.publications_settings.name+'?'}
                        .modal-body
                            p This cannot be undone
                        .modal-footer
                            form.form-group.row(method='post', action='/admin/publication-settings/'+data.publications_settings._id)
                                input(type='hidden', name='action', value='deletePublicationSetting')  
                                button.btn.btn-danger(type='submit', name='deletePublicationSetting') Delete
                                button.btn.btn-default(type='button', data-dismiss='modal') Close
                