extends ../../layouts/admin-default


block content

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-3.main 
        .row
            h3 #{data.elearning_logs._id}
         form.row
            .row
                .col-md-1
                    p User
                .col-md-2
                    mark #{data.elearning_logs.user}
            .row
                .col-md-1
                    p Event
                .col-md-2
                    mark #{data.elearning_logs.event}
            .row
                h4 Meta
            .row
                .col-md-1
                    p CreatedAt
                .col-md-3
                    mark #{data.elearning_logs.createdAt}
            .row
                .col-md-1
                    p UpdatedAt
                .col-md-3
                    mark #{data.elearning_logs.updatedAt}
            br
            br
            footer.footer
                .container        
                    button.btn.btn-primary(type='submit') Save
                    button.btn.btn-link(type='button', data-toggle='modal', data-target='#deleteELearningLog') Delete ELearning Log
        #deleteELearningLog.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteELearningLogLabel')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') Ã—
                        h4#deleteELearningLogLabel.modal-title #{'Are you sure you want to delete '+data.elearning_logs._id+'?'}
                    .modal-body
                        p This cannot be undone
                    .modal-footer
                        form.form-group.row(method='post', action='/admin/elearning-logs/'+data.elearning_logs._id)
                            input(type='hidden', name='action', value='deleteELearningLog')  
                            button.btn.btn-danger(type='submit', name='deleteELearningLog') Delete
                            button.btn.btn-default(type='button', data-dismiss='modal') Close

