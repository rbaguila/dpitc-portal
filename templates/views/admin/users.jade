extends ../../layouts/admin-default

block content
    .row
        .col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-2.main
            input.form-control(type='text', placeholder='Search..')
            button.btn.btn-success(type='button') Create User
            .table-responsive   
                table.table.table-striped
                    thead
                    tr
                        th Name
                        th Email
                        th Can access keystone
                    tbody
                    each user in locals.data.users
                        tr   
                            td 
                                a(href='?id=' + user._id) #{user.name.first +' '+ user.name.last}
                            td #{user.email}
                            td #{user.canAccessKeystone}
                    else
                        .jumbotron
                            h3 No data