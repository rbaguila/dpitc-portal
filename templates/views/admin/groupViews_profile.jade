extends ../../layouts/admin-default


block content

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-3.main 
        .row
            h3 #{data.group_views._id}
        .row
            .col-md-2
                p IP
            .col-md-3
                mark #{data.group_views.ip}
        .row
            .col-md-2
                p Time
            .col-md-3
                mark #{data.group_views.time}
        .row    
            .col-md-2
                p City
            .col-md-3
                mark #{data.group_views.city}
        .row    
            .col-md-2
                p Region
            .col-md-3   
                mark #{data.group_views.region}
        .row
            .col-md-2
                p Country
            .col-md-3    
                mark #{data.group_views.country}
        .row    
            .col-md-2
                p Loc
            .col-md-3    
                mark #{data.group_views.loc}
        br
        br
        footer.footer
            .container
                button.btn.btn-link(type='submit', data-toggle='modal', data-target='#deleteGroupView') Delete Group View
    #deleteGroupView.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteGroupViewLabel')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    h4#deleteGroupViewLabel.modal-title #{'Are you sure you want to delete '+data.group_views._id+'?'}
                .modal-body
                    p This cannot be undone
                .modal-footer
                    form.form-group.row(method='post', action='/admin/group-views/'+data.group_views._id)
                        input(type='hidden', name='action', value='deleteGroupView')  
                        button.btn.btn-danger(type='submit', name='deleteGroupView') Delete
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
