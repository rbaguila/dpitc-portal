extends ../../layouts/admin-default

block content
    .row
        .col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3.main
            h3 #{data.lovideos._id}
            form.form-group.row(method='post')
                .row
                    .col-md-7
                        input.form-control.input-lg(type='text', value= data.lovideos.title, placeholder='Title')
                h5.help-block #{'Key: '+data.lovideos.key}
                h5.help-block #{'ID: '+data.lovideos._id}
                .row
                    .col-md-7
                        label Youtube URL
                        input.form-control(type='url', value= data.lovideos.url, placeholder='URL')
                .row
                    .col-md-7
                        label Description
                        textarea.form-control(rows='10') #{data.lovideos.description}
                br
                br
                footer.footer
                    .container
                        button.btn.btn-primary(type='submit') Save
                        button.btn.btn-link(type='button', data-toggle='modal', data-target='#deleteLOVideo') Delete LOVideo
            #deleteLOVideo.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteLOVideoLabel')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            h4#deleteLOVideoLabel.modal-title #{'Are you sure you want to delete '+data.lovideos.title+'?'}
                        .modal-body
                            p This cannot be undone
                        .modal-footer
                            form.form-group.row(method='post', action='/admin/lovideos/'+data.lovideos._id)
                                input(type='hidden', name='action', value='deleteLOVideo')  
                                button.btn.btn-danger(type='submit', name='deleteLOVideo') Delete
                                button.btn.btn-default(type='button', data-dismiss='modal') Close