extends ../../layouts/admin-default

block content
    .row
        .col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3.main
            h3 #{data.logalleries._id}
            form.form-group.row(method='post', action='/admin/logalleries/'+data.logalleries._id)
                input(type='hidden', name='action', value='editLOGallery')
                .row
                    .col-md-7
                        input.form-control.input-lg(type='text', value= data.logalleries.name, placeholder='Name',name='name')
                h5.help-block #{'Key: '+data.logalleries.key}
                h5.help-block #{'ID: '+data.logalleries._id}
                .row
                    .col-md-3
                        label Date Published
                        input.form-control(type='date')
                    .col-md-3
                        label Time Published
                        input.form-control(type='time')
                .row
                    .col-md-7
                        label Description
                        textarea.form-control(rows='15', name='description') #{data.logalleries.description}
                .row
                    .col-md-7
                        label Hero Image
                            input#file.custom-file-input(type='file')
                            span.custom-file-control
                .row
                    .col-md-7
                        label Images
                            input#file.custom-file-input(type='file')
                            span.custom-file-control
                br
                br
                footer.footer
                    .container    
                        button.btn.btn-primary(type='submit', name='editLOGallery') Save
                        button.btn.btn-link(type='button', data-toggle='modal', data-target='#deleteLOGallery') Delete LOGallery
            #deleteLOGallery.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteLOGalleryLabel')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            h4#deleteLOGalleryLabel.modal-title #{'Are you sure you want to delete '+data.logalleries.name+'?'}
                        .modal-body
                            p This cannot be undone
                        .modal-footer
                            form.form-group.row(method='post', action='/admin/logalleries/'+data.logalleries._id)
                                input(type='hidden', name='action', value='deleteLOGallery')  
                                button.btn.btn-danger(type='submit', name='deleteLOGallery') Delete
                                button.btn.btn-default(type='button', data-dismiss='modal') Close