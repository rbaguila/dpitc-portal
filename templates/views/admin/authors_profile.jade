extends ../../layouts/admin-default

block content
    .row
        .col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3.main
            h3 #{data.authors._id}
            form.form-group.row(method='post', action='/admin/authors/'+data.authors._id)
                input(type='hidden', name='action', value='editAuthor')
                .row
                    .col-md-7
                        input.form-control.input-lg(type='text', value= data.authors.name, placeholder='Name',name='name')
                h5.help-block #{'Key: '+data.authors.key}
                h5.help-block #{'ID: '+data.authors._id}
                .row
                    .col-md-7
                        label Organization
                        input.form-control(type='text', value= data.authors.organization, placeholder='Organization', name='organization')
                button.btn.btn-primary(type='submit', name='editAuthor') Save
                button.btn.btn-link(type='button', data-toggle='modal', data-target='#deleteAuthor') Delete Author
            #deleteAuthor.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteAuthorLabel')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            h4#deleteAuthorLabel.modal-title #{'Are you sure you want to delete '+data.authors.name+'?'}
                        .modal-body
                            p This cannot be undone
                        .modal-footer
                            form.form-group.row(method='post', action='/admin/author/'+data.authors._id)
                                input(type='hidden', name='action', value='deleteAuthor')  
                                button.btn.btn-danger(type='submit', name='deleteAuthor') Delete
                                button.btn.btn-default(type='button', data-dismiss='modal') Close