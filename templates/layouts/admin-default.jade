doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title DPITC

    // Bootstrap
    link(href='/styles/bootstrap/bootstrap.min.css', rel='stylesheet')
    link(href='/styles/bootstrap/dashboard.css', rel='stylesheet')
    link(href='/styles/bootstrap/jumbotron-narrow.css', rel='stylesheet')

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

    block css

  block head

  body
    
    nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/admin') DPITC
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    li 
                        a(href='/admin/settings') Site Settings
                    li
                        a(href='/keystone/signout') Sign Out
    .container-fluid
        .row    
            .col-sm-3.col-md-2.sidebar
                ul.nav.nav-sidebar
                    each link in navLinks
                        li
                            a(href=link.link) #{link.text}

        .row    
            .col-sm-5.col-md-2
                p
            .col-md-10
                ol.breadcrumb
                    each breadcrumb in breadcrumbs
                        if selected === breadcrumb.text
                            li.active #{breadcrumb.text}
                        else
                            li
                                a(href=breadcrumb.link) #{breadcrumb.text}

    
    block content

    script(src='/js/jquery/jquery-3.2.1.min.js')
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap/bootstrap.min.js')

    block js

